{% extends 'base.html.twig' %}

{% block title %}Ajouter une catégorie{% endblock %}

{% block body %}


<div class="container">
    <h1>Ajouter une catégorie</h1>

    {{ form_start(form, { 'attr': {'class' : 'row'} }) }}
        <div class="form-group">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom, {'attr' : {'placeholder': 'Nom' , 'class' : 'form-control'}}) }}
            <span class="text-danger">{{ form_errors(form.nom) }}</span>
        </div>
        <div class="form-group">
            {{ form_widget(form.submit, {'attr' : {'class' : 'btn btn-primary'}, 'label' : 'Ajouter'}) }}
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
