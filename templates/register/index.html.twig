{% extends 'base.html.twig' %}

{% block title %}Créez votre compte{% endblock %}

{% block body %}


    <div class="container">
        <h1>Créez votre compte</h1>

        {{ form_start(form, { 'attr': {'class' : 'row'} }) }}
        <div class="form-group">
            {{ form_label(form.firstName, 'Prénom') }}
            {{ form_widget(form.firstName, {'attr' : {'placeholder': 'Prénom' , 'class' : 'form-control'}}) }}
            <span class="text-danger">{{ form_errors(form.firstName) }}</span>
        </div>
        <div class="form-group">
            {{ form_label(form.lastName, 'Nom') }}
            {{ form_widget(form.lastName, {'attr' : {'placeholder': 'Nom', 'class' : 'form-control' }}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.email, 'Email') }}
            {{ form_widget(form.email, {'attr' : {'placeholder': 'Email', 'class' : 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.password, 'Mot de passe') }}
            {{ form_widget(form.password, {'attr' : {'placeholder': 'mot de passe', 'class' : 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.register, {'attr' : {'class' : 'btn btn-primary'}}) }}
        </div>
        {{ form_end(form) }}

    </div>
{% endblock %}
